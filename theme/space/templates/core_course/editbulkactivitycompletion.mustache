{{!
    @template core_course/editbulkactivitycompletion

    Edit default module completion screen

    Example context (json):
    {
        "form": "<form><p>Placeholder for the form</p></form>",
        "activitiescount": 1,
        "activities": [{
            "cmid": "4",
            "modname": "Test activity",
            "icon": "https://raw.githubusercontent.com/moodle/moodle/master/mod/feedback/pix/icon.png"
        }]
    }
}}
<fieldset class="fieldset-styled">
    <legend>{{#str}}modifybulkactions, completion{{/str}}</legend>
    {{{form}}}
</fieldset>

<div class="mt-3 pt-3 border-top">
    <p>{{#str}}affectedactivities, completion, <span class="badge badge-light">{{activitiescount}}</span>{{/str}}</p>
    <fieldset class="fieldset-styled activities">
        {{> core_course/activityinstance}}
    </fieldset>
</div>
