{{!
    @template core_course/favouriteicon

    This template renders the favourite icon for a course.

    Example context (json):
    {
        "id": 3,
        "isfavourite": true
    }
}}
<span id="favorite-icon-{{ id }}-{{ uniqid }}"
    data-region="favourite-icon"
    data-course-id="{{id}}"
    >
    <span
        class="text-primary icon {{^isfavourite}}hidden{{/isfavourite}}"
        data-region="is-favourite"
        aria-hidden="{{^isfavourite}}true{{/isfavourite}}{{#isfavourite}}false{{/isfavourite}}"
        >
        <svg width="18" height="18" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.75L13.75 10.25H19.25L14.75 13.75L16.25 19.25L12 15.75L7.75 19.25L9.25 13.75L4.75 10.25H10.25L12 4.75Z"></path>
        </svg>
        <span class="sr-only">{{#str}} aria:favourite, core_course {{/str}}</span>
    </span>
</span>
