{{!
    @template core/popover_region

    This template will render a popover region

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * none

    Example context (json):
    {
    }

}}


    <a id="notification-control" href="#" class="rui-topbar-special-btn"
        aria-controls="sidebar-notifications"
        role="button"
        title="{{$togglelabel}}{{#str}}showpopovermenu{{/str}}{{/togglelabel}}"
        tabindex="0">
        {{$togglecontent}}{{/togglecontent}}
    </a>

    <div id="sidebar-notifications" data-region="notification-sidebar" class="rui-blocks-column" role="region">
        <div class="header-container" data-region="header-container">
            <div class="rui-message-header-container row no-gutters justify-content-between w-100 border-bottom mb-3">
                <button id="notification-close-btn" class="notifications-drawer-toggle btn-msg-danger">
                    <svg width="20" height="20" fill="none" viewBox="0 0 24 24">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M17.25 6.75L6.75 17.25"></path>
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6.75 6.75L17.25 17.25"></path>
                    </svg>
                </button>
<div class="rui-message-app-title col no-gutters pl-3 d-inline-flex align-items-center" data-region="view-overview" data-from-panel="false" data-init="true">

                    {{$headertext}}{{/headertext}}

                  <div class="col text-right no-gutters p-0">
                    {{$headeractions}}{{/headeractions}}
                  </div>
                </div>
            </div>
            
            <div class="body-container position-relative px-3 mb-3" data-region="body-container">
                {{$content}}{{/content}}
                {{> core/loading }}
            </div>

            {{$anchor}}
            {{#urls.seeall}}
            <div class="mx-3">
                <a class="btn btn-sm btn-secondary w-100"
                href="{{{.}}}">
                {{#str}} seeall, message {{/str}}
                    <svg class="ml-2" width="18" height="18" fill="none" viewBox="0 0 24 24">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.75 6.75L19.25 12L13.75 17.25"></path>
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 12H4.75"></path>
                    </svg>
                </a>
            </div>
            {{/urls.seeall}}
            {{/anchor}}


        </div>
    </div>


<script>
window.addEventListener('DOMContentLoaded', event => {

    // Toggle the side navigation
    const nsidebarToggle = document.body.querySelector('#notification-control');
    const nsidebarClose = document.body.querySelector('#notification-close-btn');
    if (nsidebarToggle) {
        // Uncomment Below to persist sidebar toggle between refreshes
        // if (localStorage.getItem('sb|sidebar-toggle') === 'true') {
        //     document.body.classList.toggle('n-sidebar-opened');
        // }
        nsidebarToggle.addEventListener('click', event => {
            event.preventDefault();
            document.body.classList.toggle('n-sidebar-opened');
            localStorage.setItem('sb|sidebar-toggle', document.body.classList.contains('n-sidebar-opened'));
        });
    }
    if (nsidebarClose) {
        // Uncomment Below to persist sidebar toggle between refreshes
        // if (localStorage.getItem('sb|sidebar-toggle') === 'true') {
        //     document.body.classList.toggle('n-sidebar-opened');
        // }
        nsidebarClose.addEventListener('click', event => {
            event.preventDefault();
            document.body.classList.toggle('n-sidebar-opened');
            localStorage.setItem('sb|sidebar-toggle', document.body.classList.contains('n-sidebar-opened'));
        });
    }

});
</script>