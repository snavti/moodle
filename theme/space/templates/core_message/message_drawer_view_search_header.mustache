{{!
    @template core_message/message_drawer_view_search_header

    This template will render the header of the search page in the message drawer.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid The logged in user id
    * urls The URLs for the popover

    Example context (json):
    {}

}}

<div class="hidden view-search row no-gutters justify-content-between align-items-center w-100" {{^isdrawer}}data-in-panel="true"{{/isdrawer}} aria-hidden="true" data-region="view-search">
    <div class="d-flex align-items-center w-100">
        <a
            class="ml-3 d-flex align-items-center btn-msg"
            href="#"
            data-route-back
            data-action="cancel-search"
            role="button"
        >
            {{> core_message/message_drawer_icon_back }}
        </a>
        <div class="d-flex align-items-center rui-message-search-wrapper">
            <input
                type="text"
                class="form-control rui-message-search-input my-2 mx-3"
                placeholder="{{#str}} search, core_search {{/str}}"
                aria-label="{{#str}} search, core_search {{/str}}"
                data-region="search-input"
            >

                <button
                    class="rui-message-search-input-btn"
                    type="button"
                    data-action="search"
                    aria-label="{{#str}} search, core_search {{/str}}"
                >
                    <span data-region="search-icon-container">
                        <svg width="18" height="18" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13.75 6.75L19.25 12L13.75 17.25"></path>
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M19 12H4.75"></path>
                        </svg>
                    </span>
                    <span class="hidden" data-region="loading-icon-container">
                        {{> core/loading }}
                    </span>
                </button>

        </div>
    </div>
</div>
