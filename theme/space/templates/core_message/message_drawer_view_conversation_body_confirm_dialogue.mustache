{{!
    @template core_message/message_drawer_view_conversation_body_confirm_dialogue

    This template will render the confirmation dialogue inside the conversation page of
    the message drawer.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid The logged in user id
    * urls The URLs for the popover

    Example context (json):
    {}

}}

<div class="p-3 bg-white rounded" data-region="confirm-dialogue" role="alert">
    <h3 class="h6 hidden" data-region="dialogue-header"></h3>
    <p data-region="dialogue-text"></p>
    <div class="p-0 mb-2 custom-control custom-checkbox hidden" data-region="delete-messages-for-all-users-toggle-container">
            <label class="custom-control ios-switch d-inline-flex align-items-center">
                <input class="ios-switch-control-input" type="checkbox"
                    id="delete-messages-for-all-users" data-region="delete-messages-for-all-users-toggle"
                >
                <span class="ios-switch-control-indicator"></span>
                <label class="my-0" for="delete-messages-for-all-users">
                    {{#str}} deleteforeveryone, core_message {{/str}}
                </label>
            </label>
    </div>
    <button type="button" class="mx-0 btn btn-danger btn-block hidden" data-action="confirm-block">
        <span data-region="dialogue-button-text">{{#str}} blockuserconfirmbutton, core_message {{/str}}</span>
        <span class="hidden" data-region="loading-icon-container">{{> core/loading }}</span>
    </button>
    <button type="button" class="mx-0 btn btn-success btn-block hidden" data-action="confirm-unblock">
        <span data-region="dialogue-button-text">{{#str}} unblock, core_message {{/str}}</span>
        <span class="hidden" data-region="loading-icon-container">{{> core/loading }}</span>
    </button>
    <button type="button" class="mx-0 btn btn-danger btn-block hidden" data-action="confirm-remove-contact">
        <span data-region="dialogue-button-text">{{#str}} remove, core {{/str}}</span>
        <span class="hidden" data-region="loading-icon-container">{{> core/loading }}</span>
    </button>
    <button type="button" class="mx-0 btn btn-success btn-block hidden" data-action="confirm-add-contact">
        <span data-region="dialogue-button-text">{{#str}} add, core {{/str}}</span>
        <span class="hidden" data-region="loading-icon-container">{{> core/loading }}</span>
    </button>
    <button type="button" class="mx-0 btn btn-danger btn-block hidden" data-action="confirm-delete-selected-messages">
        <span data-region="dialogue-button-text">{{#str}} delete, core {{/str}}</span>
        <span class="hidden" data-region="loading-icon-container">{{> core/loading }}</span>
    </button>
    <button type="button" class="mx-0 btn btn-danger btn-block hidden" data-action="confirm-delete-conversation">
        <span data-region="dialogue-button-text">{{#str}} delete, core {{/str}}</span>
        <span class="hidden" data-region="loading-icon-container">{{> core/loading }}</span>
    </button>
    <button type="button" class="mx-0 btn btn-primary btn-block hidden" data-action="request-add-contact">
        <span data-region="dialogue-button-text">{{#str}} sendcontactrequest, core_message {{/str}}</span>
        <span class="hidden" data-region="loading-icon-container">{{> core/loading }}</span>
    </button>
    <button type="button" class="mx-0 btn btn-primary btn-block hidden" data-action="accept-contact-request">
        <span data-region="dialogue-button-text">{{#str}} acceptandaddcontact, core_message {{/str}}</span>
        <span class="hidden" data-region="loading-icon-container">{{> core/loading }}</span>
    </button>
    <button type="button" class="mx-0 btn btn-danger btn-block hidden" data-action="decline-contact-request">
        <span data-region="dialogue-button-text">{{#str}} decline, core_message {{/str}}</span>
        <span class="hidden" data-region="loading-icon-container">{{> core/loading }}</span>
    </button>
    <button type="button" class="mx-0 btn btn-primary btn-block" data-action="okay-confirm">{{#str}} ok, core {{/str}}</button>
    <button type="button" class="mx-0 btn btn-secondary btn-block" data-action="cancel-confirm">{{#str}} cancel, core {{/str}}</button>
</div>
