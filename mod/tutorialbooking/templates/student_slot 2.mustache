{{!
    @template mod_tutorialbooking/student_slot

    Student view of the tutorial booking activity.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * id
    * signups
    * signedup
    * cansignup

    Example context (json):
    {
        "id": 6,
        "signups": [
            "<li>Bill Jukes</li>",
            "<li>You</li>",
            "<li>Wendy Darling</li>"
        ],
        "signedup": true,
        "cansignup": false
    }
}}
<div id="slot-{{id}}" class="tutorial_session">
    {{> mod_tutorialbooking/slot_information}}
    {{^privatesignups}}<div>{{#str}} attendees, tutorialbooking {{/str}}</div>{{/privatesignups}}
    <ul class="session_attendees">
        {{#signups}}{{{.}}}{{/signups}}
    </ul>
    <div class="controls">{{^locked}}
        {{#signedup}}<a href="{{{urlremove}}}" class="btn btn-primary btn-sm">{{#str}} removefromslot, tutorialbooking {{/str}}</a>{{/signedup}}
        {{#cansignup}}<a href="{{{urlsignup}}}" class="btn btn-primary btn-sm">{{#str}} signupforslot, tutorialbooking {{/str}}</a>{{/cansignup}}
    {{/locked}}</div>
</div>
